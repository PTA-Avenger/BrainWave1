<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.App.Views.TaskListPage"
             Title="Tasks">
    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <Label Text="Your Tasks" Style="{StaticResource Heading1}" />
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
            <Button Text="Refresh" Command="{Binding LoadTasksCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
            <Label Grid.Column="1" Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        </Grid>
        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsBusy}" Command="{Binding LoadTasksCommand}">
            <CollectionView ItemsSource="{Binding Tasks}" Margin="0,6,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Card}" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" Style="{StaticResource Heading2}" />
                                <Label Text="{Binding Description}" />
                                <Label Text="{Binding Due_Date}" Style="{StaticResource Caption}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="32" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No tasks yet" Style="{StaticResource Heading2}" HorizontalTextAlignment="Center" />
                        <Label Text="Pull to refresh or create a new task." Style="{StaticResource Caption}" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
