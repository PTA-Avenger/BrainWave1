<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.App.Views.RegisterPage"
             xmlns:vm="clr-namespace:BrainWave.App.ViewModels"
             Title="Register">
    <ContentPage.BindingContext>
        <vm:RegisterViewModel />
    </ContentPage.BindingContext>
    <Grid Padding="24" RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Spacing="6">
            <Label Text="Create your account" Style="{StaticResource Heading1}" />
            <Label Text="Itâ€™s fast and free" Style="{StaticResource Caption}" />
        </VerticalStackLayout>
        <Frame Grid.Row="1" Style="{StaticResource Card}">
            <VerticalStackLayout Spacing="8">
                <Entry Placeholder="First Name" Text="{Binding FirstName}" />
                <Entry Placeholder="Last Name" Text="{Binding LastName}" />
                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
                <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
                <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />
                <Picker Title="Role" SelectedItem="{Binding Role}">
                    <x:String>User</x:String>
                    <x:String>Admin</x:String>
                </Picker>
            </VerticalStackLayout>
        </Frame>
        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
            <Label Text="{Binding SuccessMessage}" TextColor="Green" IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}" />
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Button Text="Back to Login" Style="{StaticResource GhostButton}" Clicked="OnLoginClicked" />
                <Button Grid.Column="1" Text="Register" Command="{Binding RegisterCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
