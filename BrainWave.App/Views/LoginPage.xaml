<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.App.Views.LoginPage"
             xmlns:vm="clr-namespace:BrainWave.App.ViewModels"
             Title="Login">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        <Button Text="Login" Command="{Binding LoginCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
