<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.App.Views.LoginPage"
             xmlns:vm="clr-namespace:BrainWave.App.ViewModels"
             Title="Login">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <Grid Padding="24" RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Spacing="6">
            <Label Text="Welcome back" Style="{StaticResource Heading1}" />
            <Label Text="Sign in to continue" Style="{StaticResource Caption}" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" Spacing="12">
            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout>
                    <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
                    <Entry x:Name="PasswordEntry" Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
                </VerticalStackLayout>
            </Frame>
            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        </VerticalStackLayout>
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="12">
            <Button Text="Create account" Style="{StaticResource GhostButton}" Clicked="OnRegisterClicked" />
            <Button Grid.Column="1" Text="Login" Command="{Binding LoginCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
        </Grid>
    </Grid>
</ContentPage>
