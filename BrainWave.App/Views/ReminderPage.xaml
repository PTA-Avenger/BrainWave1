<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainWave.App.Views.ReminderPage"
             Title="Reminders">
    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <Label Text="Reminders" Style="{StaticResource Heading1}" />
        <Label Grid.Row="1" Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Reminders}" Margin="0,6,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Card}" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Reminder_Type}" Style="{StaticResource Heading2}" />
                                <Label Text="{Binding Notify_Time}" Style="{StaticResource Caption}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="32" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No reminders yet" Style="{StaticResource Heading2}" HorizontalTextAlignment="Center" />
                        <Label Text="Pull to refresh to check for updates." Style="{StaticResource Caption}" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
