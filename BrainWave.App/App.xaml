<?xml version="1.0" encoding="UTF-8"?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:BrainWave.App.Converters"
    x:Class="BrainWave.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color palette -->
            <Color x:Key="ColorPrimary">#512BD4</Color>
            <Color x:Key="ColorOnPrimary">#FFFFFF</Color>
            <Color x:Key="ColorSecondary">#2DD4BF</Color>
            <Color x:Key="ColorSurface">#F7F7FB</Color>
            <Color x:Key="ColorOnSurface">#1F2937</Color>
            <Color x:Key="ColorBorder">#E5E7EB</Color>

            <!-- Typography -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Label" x:Key="Heading1">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
            </Style>
            <Style TargetType="Label" x:Key="Heading2">
                <Setter Property="FontSize" Value="22" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
            <Style TargetType="Label" x:Key="Caption">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="#6B7280" />
            </Style>

            <!-- Inputs -->
            <Style TargetType="Entry">
                <Setter Property="Margin" Value="0,6" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource ColorOnSurface}" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="PlaceholderColor" Value="#9CA3AF" />
            </Style>

            <!-- Buttons -->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="16,12" />
                <Setter Property="TextColor" Value="{StaticResource ColorOnPrimary}" />
                <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
            </Style>
            <Style TargetType="Button" x:Key="SecondaryButton">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="16,12" />
                <Setter Property="BackgroundColor" Value="{StaticResource ColorSecondary}" />
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style TargetType="Button" x:Key="GhostButton">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="16,12" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BorderColor" Value="{StaticResource ColorPrimary}" />
                <Setter Property="BorderWidth" Value="1" />
            </Style>

            <!-- Cards -->
            <Style TargetType="Frame" x:Key="Card">
                <Setter Property="Padding" Value="16" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="BorderColor" Value="{StaticResource ColorBorder}" />
            </Style>

            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>