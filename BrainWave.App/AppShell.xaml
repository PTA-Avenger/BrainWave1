<?xml version="1.0" encoding="UTF-8"?>
<Shell
x:Class="BrainWave.App.AppShell"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:views="clr-namespace:BrainWave.App.Views">

    <!-- Make Login the first Shell item so the app starts here -->
    <ShellContent Route="Login" Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="Register" Title="Register" ContentTemplate="{DataTemplate views:RegisterPage}" />

    <TabBar>
        <ShellContent Route="Dashboard" Title="Dashboard" ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent Route="Tasks" Title="Tasks" ContentTemplate="{DataTemplate views:TaskListPage}" />
        <ShellContent Route="Reminders" Title="Reminders" ContentTemplate="{DataTemplate views:ReminderPage}" />
        <ShellContent Route="Badges" Title="Badges" ContentTemplate="{DataTemplate views:BadgePage}" />
        <ShellContent Route="Collab" Title="Collaborations" ContentTemplate="{DataTemplate views:CollaborationPage}" />
        <ShellContent Route="Profile" Title="Profile" ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>

</Shell>